<h1>Edit Lesson</h1>

<% if @lesson.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @lesson.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/lessons/<%= @lesson.number %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="lesson_number">Number</label>
  <input id="lesson_number" name="number" type="number" value="<%= @lesson.number %>">
  <label for="lesson_name">Name</label>
  <input id="lesson_name" name="name" type="text" value="<%= @lesson.name %>">
  <label for="lesson_content">Content</label>
  <input id="lesson_content" name="content" type="text" value="<%= @lesson.content %>">
  <button>Edit lesson</button>
</form>

<p><a href="/lessons">Return to the lessons index</a></p>
